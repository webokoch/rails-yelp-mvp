
  <h1>
    Add a new Restaurant
  </h1>
   <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <br>
    <%= f.input :address %>
    <br>
    <%= f.input :phone_number %>
    <br>
    <%= f.input :category, collection:  Restaurant::CATEGORY %>
    <br>
    <%= f.submit class: "btn btn-primary rounded"%>
    <%= link_to "Back to all Restaurants", restaurants_path, class: "ml-5 btn btn-primary rounded"%>
  <% end -%>





